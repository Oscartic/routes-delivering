<div class="ro">
  <div class="col-12">
    <h1>Conductores</h1>
    <p>Listado de todos los Conductores registrados en la plataforma</p>
    <%= link_to 'Agregar Conductor', new_driver_path, class: 'btn btn-sm btn-dark mb-2', remote: true %>
    <table class="table">
      <thead class="thead-dark">
      <tr>
        <th scope="col">#id</th>
        <th scope="col">Nombre</th>
        <th scope="col">Apellidos</th>
        <th scope="col">Movil</th>
        <th scope="col">email</th>
        <th scope="col">Veh√≠culo</th>
        <th scope="col">Acciones</th>
      </tr>
      </thead>
      <tbody id="drivers-table">
      <% if @drivers.present?  %>
        <% @drivers.each do |driver| %>
          <%= render "driver_tr", driver: driver %>
        <% end %>
      <% else %>
        <tr>
          <th colspan="4">
            No hay vehiculos registrados.
          </th>
        </tr>
      <%end  %>
      </tbody>
    </table>
    <%= render "partials/modal" %>
  </div>
</div>
